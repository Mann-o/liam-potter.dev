@font-face
  font-family: 'Rubik'
  font-style: normal
  font-weight: 300
  font-display: swap
  src: local('Rubik Light'),
       local('Rubik-Light'),
       url('/fonts/rubik-v8-latin-300.woff2') format('woff2'),
       url('/fonts/rubik-v8-latin-300.woff') format('woff')

@font-face
  font-family: 'Rubik'
  font-style: italic
